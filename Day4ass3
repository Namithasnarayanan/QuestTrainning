 int n, number = 1;

         Console.Write("Enter the number of rows: ");
         n = Convert.ToInt32(Console.ReadLine());

         for (int i = 1; i <= n; i++)
         {
             for (int j = 1; j <= i; j++)
             {
                 Console.Write(number + " ");
                 number++; 
             }
             Console.WriteLine();
         }

